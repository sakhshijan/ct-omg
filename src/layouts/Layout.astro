---
import Header from "../components/global/Header.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fa" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Page Descriptions" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/@majidh1/jalalidatepicker/dist/jalalidatepicker.min.css"
    />
    <link
      href="https://static.neshan.org/sdk/leaflet/1.4.0/leaflet.css"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="stylesheet" href="/WebFonts/fontiran.css" />
    <link rel="stylesheet" href="/font-awesome/css/all.min.css" />
  </head>
  <body class="flex min-h-screen flex-col font-kalameh">
    <Header />
    <slot />
    <script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js"
    ></script>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
    ></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"
    ></script>
    <script
      is:inline
      src="https://unpkg.com/jalali-moment/dist/jalali-moment.browser.js"
    ></script>
    <script
      type="text/javascript"
      src="https://unpkg.com/@majidh1/jalalidatepicker/dist/jalalidatepicker.min.js"
    ></script>
    <script
      src="https://static.neshan.org/sdk/leaflet/1.4.0/leaflet.js"
      type="text/javascript"></script>

    <script is:inline src="/script/main.js"></script>
  </body>
</html>

<style is:global>
  :root {
    -webkit-tap-highlight-color: transparent;
  }

  .styled-scrollbars {
    /* Foreground, Background */
    scrollbar-color: #dedede #b9b9b9;
  }

  ::-webkit-scrollbar {
    width: 5px; /* Mostly for vertical scrollbars */
    height: 5px; /* Mostly for horizontal scrollbars */
  }

  ::-webkit-scrollbar-thumb {
    /* Foreground */
    @apply rounded-full bg-primary;
  }

  ::-webkit-scrollbar-track {
    /* Background */
    @apply rounded-full bg-primary/40;
  }
</style>
